      label(for='question') Question
      br
      input(name='question' id='question')
    .form-group
      label(for='option1') Option 1
      br
      input(name='option1' id='option1')
    .form-group
      label(for='option2') Option 2
      br
      input(name='option2' id='option2')
    .form-group
      a(href="#" id='sub') submit